<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/theme_ripple_white">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <corners android:radius="@dimen/size_32dp"/>
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ff7800"
                android:endColor="#ffb719"
                android:angle="180"/>
            <corners android:radius="@dimen/size_32dp"/>
        </shape>
    </item>
</ripple>