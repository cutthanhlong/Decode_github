    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ff2bd6ff"
                android:endColor="#ff139eff"
                android:angle="360"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>
