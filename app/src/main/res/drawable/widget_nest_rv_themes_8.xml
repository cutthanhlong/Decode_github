<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ff1877f2"
                android:endColor="#ff1aecff"
                android:angle="360"
                android:centerColor="#ff00a4ee"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#f0ffffff"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>