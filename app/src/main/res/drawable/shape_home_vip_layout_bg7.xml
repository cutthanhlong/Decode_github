<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#f77318"
                android:endColor="#f77318"
                android:angle="180"
                android:centerColor="#f77318"/>
            <corners android:radius="@dimen/size_12dp"/>
        </shape>
    </item>
    <item
        android:left="@dimen/size_1dp"
        android:top="@dimen/size_1dp"
        android:right="@dimen/size_1dp"
        android:bottom="@dimen/size_1dp">
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="0"
                android:centerColor="#ffffff"/>
            <corners android:radius="@dimen/size_12dp"/>
        </shape>
    </item>
</layer-list>