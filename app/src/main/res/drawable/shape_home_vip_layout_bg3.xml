<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#ffebeb"
                android:endColor="#ffebeb"
                android:angle="180"
                android:centerColor="#ffebeb"/>
            <corners android:radius="@dimen/size_22dp"/>
        </shape>
    </item>
    <item android:bottom="2dp">
        <shape>
            <gradient
                android:startColor="#ff713b"
                android:endColor="#ffc000"
                android:angle="0"
                android:centerColor="#dd51ff"/>
            <corners android:radius="@dimen/size_22dp"/>
        </shape>
    </item>
</layer-list>