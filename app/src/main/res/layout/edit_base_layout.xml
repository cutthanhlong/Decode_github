<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <com.example.myapplication.custom.edittext.EditText
        android:id="@+id/content_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:fontFamily="@font/manrope_medium"
        android:gravity="top"
        android:hint="@string/content"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions"
        android:lineSpacingExtra="4dp"
        android:linksClickable="false"
        android:paddingBottom="2dp"
        android:textColor="@color/text_color_new"
        android:textColorHighlight="#FFED64"
        android:textColorHint="@color/black"
        android:textCursorDrawable="@drawable/shape_cursor_color"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photo_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="8dp"
            android:nestedScrollingEnabled="false"
            android:verticalSpacing="8dp"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>