<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:id="@+id/check_box"
        android:layout_width="@dimen/size_19dp"
        android:layout_height="@dimen/size_19dp"
        android:layout_marginLeft="@dimen/size_5dp"
        android:layout_marginTop="@dimen/size_4dp"
        android:layout_marginRight="@dimen/size_5dp"
        android:background="@drawable/ic_checkbox10sp"
        android:focusable="false"
        android:tag="checklistview_checkbox"
        android:theme="@style/checkbox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.neopixl.pixlui.components.edittext.EditText
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:fontFamily="@font/manrope_medium"
        android:gravity="top"
        android:hint="@string/content"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions"
        android:lineSpacingExtra="4dp"
        android:linksClickable="false"
        android:paddingBottom="2dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/selected"
        android:textColorHint="@color/black_20alpha_33000"
        android:textCursorDrawable="@drawable/shape_cursor_color"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintLeft_toRightOf="@+id/check_box"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>